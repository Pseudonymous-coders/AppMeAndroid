<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/data_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.pseudonymous.appmea.fragment.DataFragment"
    android:weightSum="1">

    <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="6dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <lumenghz.com.pullrefresh.PullToRefreshView
        android:id="@+id/pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lrefresh="rocket"
        >

    <ListView
        android:id="@+id/totalList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:divider="@color/md_divider_black"
        android:dividerHeight="@dimen/md_divider_height">
    </ListView>

    </lumenghz.com.pullrefresh.PullToRefreshView>
    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ScrollView>-->

