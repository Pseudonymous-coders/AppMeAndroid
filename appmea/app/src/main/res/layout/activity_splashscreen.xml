<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/splash_gradient_background"
android:layout_gravity="center"
android:id="@+id/lin_splash"
android:gravity="center"
android:orientation="vertical"
android:weightSum="1">

    <com.rey.material.widget.ImageView
        android:id="@+id/splash"
        android:background="@drawable/ic_pseudo_no_text"
        android:layout_height="120dp"
        android:layout_width="120dp" />

    <com.rey.material.widget.TextView
        android:text="@string/splash_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/pseudo_text_color"
        android:background="#00ffffff"
        android:textSize="25sp"
        android:id="@+id/textView" />

</com.rey.material.widget.LinearLayout>