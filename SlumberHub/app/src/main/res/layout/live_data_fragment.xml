<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/temp_bar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="#d50000"
        CircleProgressView:cpv_barWidth="12dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="#ffab91"
        CircleProgressView:cpv_rimWidth="12dp"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="#fff"
        CircleProgressView:cpv_textColor="#fff"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_value="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="31dp"/>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/humidity_bar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="#1565c0"
        CircleProgressView:cpv_barWidth="12dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="#90caf9"
        CircleProgressView:cpv_rimWidth="12dp"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="#fff"
        CircleProgressView:cpv_textColor="#fff"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_value="10"
        android:layout_alignTop="@+id/temp_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:text="@string/smart_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smart_score_text"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignTop="@+id/temp_bar"
        android:layout_centerHorizontal="true"/>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/smart_live_score"
        android:layout_width="80dp"
        android:layout_height="80dp"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="#33691e"
        CircleProgressView:cpv_barWidth="12dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="#a5d6a7"
        CircleProgressView:cpv_rimWidth="12dp"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="#fff"
        CircleProgressView:cpv_textColor="#fff"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_value="10"
        android:layout_below="@+id/smart_score_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_battery_critical"
        android:id="@+id/battery_icon"
        android:contentDescription="@string/battery_level"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/humidity_bar"
        android:layout_marginBottom="19dp"/>

</RelativeLayout>